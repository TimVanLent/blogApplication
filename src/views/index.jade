doctype html
html
	head
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script(src='//code.jquery.com/ui/1.11.4/jquery-ui.js')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
		link(rel='stylesheet', href='/index.css', type='text/css')

	body
		if user
			.nav( role="navigation" )
				.navbar-header.col-md-2
					h3 sup dude
				.active.col-md-8
					a#logout(href='/logout')
						h4 don't log out	
				.active.col-md-2
					h4 logged in as #{user.username}
			.grid.container
				.row
					.col-md-5.col-sm-6.col-xs-12
						.col-md-12
							h3 write a message!
							form(action = '/blogs' method='post')
								input#title(placeholder='title' name='title')
								input.bodySubmit(placeholder='body' name='body')
								input.titleSubmit(type='submit' value='post' class='postButton')
						.col-md-12
							h3 my messages
							each blog in blogs
								if(blog.userId == user.username)
									.well
										.post.container-fluid
											a(id= blog.id, href="/blog/" + blog.id + '#' + blog.id) 
												h4= blog.title	
											h5(id=blog.body)= blog.body
											h6#ref= " - " + blog.userId
											br
										.comment.container-fluid
											if(blog.id == blogID)
												if(comments == 'no comments')
													em write a reaction
													form(action = '/comment' method='post')
														input(placeholder='title' name='comment')
														input(type='submit' value='post')
												else
													each comment in comments
														p(id=comment.comment)= comment.userId +' ' + 'says: ' + " "+ comment.comment
													form(action = '/comment' method='post')
														input(placeholder='title' name='comment')
														input(type='submit' value='post')
					.col-md-4.col-sm-6.col-xs-12
						h3 latest activity..
						for(var i=0, i<blogs.length, i++)
							if(i=1)
								.well
									.post.container-fluid
										a(id= blogs[i].id + "latest", href="/blog/" + blogs[i].id + '#' + blogs[i].id + "latest") 
												h5= blogs[i].title
											h5(id=blogs[i].body)= blogs[i].body
											h6#ref= " - " + blogs[i].userId
											br
									.comment.container-fluid
										if(blogs[i].id == blogID)
											if(comments == 'no comments')
												em write a reaction
												form(action = '/comment' method='post')
													input(placeholder='title' name='comment')
													input(type='submit' value='post')
											else
												each comment in comments
													p(id=comment.comment)= comment.userId +' ' + 'says: ' + " "+ comment.comment
												form(action = '/comment' method='post')
													input(placeholder='title' name='comment')
													input(type='submit' value='post')
						h3 not my messages..
						each blog in blogs
							if(blog.userId !== user.username)
								.well
									.post.container-fluid
										a(id= blog.id, href="/blog/" + blog.id + '#' + blog.id) 
											h5= blog.title
										h5(id=blog.body)= blog.body
										h6#ref= " - " + blog.userId
										br
									.comment.container-fluid
										if(blog.id == blogID)
											if(comments == 'no comments')
												em write a reaction
												form(action = '/comment' method='post')
													input(placeholder='title' name='comment')
													input(type='submit' value='post')
											else
												each comment in comments
													p(id=comment.comment)= comment.userId +' ' + 'says: ' + " "+ comment.comment
												form(action = '/comment' method='post')
													input(placeholder='title' name='comment')
													input(type='submit' value='post')

					.col-md-2.col-sm-6.col-xs-12
						h3 Bloglist
						br
						each blog in blogs
							- var x = '#' + blog.id
							a(href= "/blog/" + blog.id + x)
								h5= blog.title + " - " 
								h6#ref= " - " + blog.userId
								br
		else
			.logReg
				h3#loginText login
				form#loginForm(action = '/login' method='post')
					input#username(placeholder='username' name='username')
					input#password(placeholder='password' type='password' name='password')
					input.loginButton(type='submit' value='login' class='loginButton')
				h3#registerText or.. register 
				form.registerForm(action = '/register' method='post')
					input#addUser(placeholder='pick a username' name='addUser')
					input#addPass(placeholder='choose your password' name='addPass' type='password')
					input#addEmail(placeholder='give us your emailadress' name='addEmail')
					input.registerButton(type='submit' value='register' class='registerButton')
				br
			.hiThere
				h2 Hi there	
			.punt
				h2#punt .
	script.
		$(document).ready(function(){
				$(".logReg").animate({top: '20%'}, 2000, "easeInOutBack");

				$(".hiThere").delay(3000).animate({right: '20%'}, 4000, 'easeOutQuart');
				
				$(".punt").delay(4000).animate({right: '19%'}, 4000);

			})
		
		